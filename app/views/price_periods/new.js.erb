$('#new_price_period .modal-body .price-periods-form').html('<%=j render "form" %>')
$('#new_price_period').modal()
$('.price_period_end_date').hide();
$('#price_period_start_date').datepicker({
  "autoclose": true,
  format: 'dd-mm-yyyy'
}).on('changeDate', function(ev) {
  $('.price_period_end_date').show('slow');
  $('#price_period_end_date').datepicker({
    "autoclose": true,
    startDate: $(this).val(),
    format: 'dd-mm-yyyy'
  });
}).data('datepicker');
$('#price_period_currency_id').currency_edit();