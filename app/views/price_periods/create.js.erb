<% if @price_period.errors.any? %>
  $('#new_price_period .modal-body .errors').html('<div class="alert"><%= @price_period.errors.full_messages.join(", ") %></div>')
<% else %>
  $('#new_price_period .modal-body .errors').html('')
  $('#new_price_period .modal-body table tbody').html('<%=j render @price_periods %>')
  $('#price_period_per_night, #price_period_start_date, #price_period_end_date').val('')
<% end %>
